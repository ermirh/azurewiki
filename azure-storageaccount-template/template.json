{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 24
        },
        "StorageAccountTypes": {
            "type": "string",
            "allowedValues": [
                "Locally Redundant Storage (1 single location)",
                "Geo Replicated Storage (1 single location + 1 secondary location)",
                "Zone Redundant Storage (3 different AZs)",
                "Read-Access Geo Replicated Storage"
            ],
            "metadata": {
                "description": "Select option for your Storage data redundancy."
            }
        },
        "Kind": {
            "type": "string",
            "allowedValues": [
                "StorageV2",
                "BlobStorage",
                "FileStorage",
                "BlockBlobStorage"
            ],
            "defaultValue": "StorageV2"
        },
        "AccessTier": {
            "type": "string",
            "allowedValues": [
                "Hot",
                "Cold",
                "Archive"
            ]
        },
        "ContainerName": {
            "type": "string",
            "metadata": {
                "description": "Create a private container in Storage Blobs"
            }
        }
    },
    "variables": {
        "suffix": "[toLower(uniqueString(resourceGroup().id, resourceGroup().location))]",
        "location": "[resourceGroup().location]",
        "storageName": "[substring(concat(parameters('Name'), variables('suffix')), 3, 24)]",
        "SKUs": {
            "Locally Redundant Storage (1 single location)": {
                "name": "Standard_LRS"
            },
            "Geo Replicated Storage (1 single location + 1 secondary location)": {
                "name": "Standard_GRS"
            },
            "Zone Redundant Storage (3 different AZs)": {
                "name": "Standard_ZRS"
            },
            "Read-Access Geo Replicated Storage": {
                "name": "Standard_RAGRS"
            }
        },
        "containerName": "[substring(concat(parameters('ContainerName'),variables('suffix')),0,20)]"
    },
    "resources": [
            {
                "name": "[variables('storageName')]",
                "type": "Microsoft.Storage/storageAccounts",
                "apiVersion": "2019-04-01",
                "location": "[variables('location')]",
                "sku": {
                    "name": "[variables('SKUs')[parameters('StorageAccountTypes')].name]",
                    "tier": "Standard"
                },
                "kind": "[parameters('Kind')]",
                "identity": {
                    "type": "SystemAssigned"
                },
                "tags": {
                    "displayName": "[variables('storageName')]"
                },
                "properties": {
                    "accessTier": "[parameters('AccessTier')]",
                    "supportsHttpsTrafficOnly": false
                },
                "resources": [
                    {
                        "name": "[variables('containerName')]",
                        "type": "blobServices/containers",
                        "apiVersion": "2019-04-01",
                        "properties": {
                            "publicAccess": "Container"
                        },
                        "dependsOn": [
                            "[variables('storageName')]"
                        ]
                    }
                ]
            }
    ],
    "outputs": {
        "Storage Name": {
            "type": "string",
            "value": "[variables('storageName')]"
        },
        "Storage Endpoint": {
            "type": "string",
            "value": "[reference(variables('storageName'),'2019-04-01', 'Full').PrimaryEndpoints.Blob]"
        }
    }
}